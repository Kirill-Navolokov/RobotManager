<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="RobotManager.App">
	<Application.Resources>
		<Style x:Key="MenuItemButtonStyle" TargetType="Button">
			<Setter Property="BackgroundColor" Value="Azure"/>
			<Setter Property="TextColor" Value="SteelBlue"/>
			<Setter Property="FontSize" Value="Medium"/>
			<Setter Property="FontAttributes" Value="Bold"/>
		</Style>

		<Style TargetType="NavigationPage">
			<Setter Property="BarBackgroundColor" Value="SteelBlue"/>
			<Setter Property="BarTextColor" Value="Azure"/>
		</Style>
	</Application.Resources>
</Application>